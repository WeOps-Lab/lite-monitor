{
  "plugin":"",
  "plugin_desc":"",
  "name": "Host",
  "type": "OS",
  "description": "The host monitoring plugin is used to collect and analyze performance data of hosts, including CPU, memory, disk, and network usage.",
  "metrics": [
      {
          "metric_group": "CPU",
          "name": "cpu_summary.usage",
          "display_name": "CPU Usage Rate",
          "type": "gauge",
          "query": "((node_cpu_seconds_total_counter{__$labels__} - node_cpu_guest_seconds_total_counter{__$labels__}) / node_cpu_seconds_total_counter{__$labels__}) * 100",
          "unit": "percent",
          "data_type": "float",
          "description": "Current CPU usage percentage, representing the percentage of CPU that is currently in use. Calculated as the total time in user mode, system mode, interrupts, etc., divided by total time.",
          "dimensions": [
            {
            "name": "cpu",
            "description": "CPU"
          }
        ]
      },
      {
          "metric_group": "CPU",
          "name": "cpu_summary.idle",
          "display_name": "CPU Idle Rate",
          "type": "gauge",
          "query": "(1 - (node_cpu_seconds_total_counter{__$labels__} - node_cpu_guest_seconds_total_counter{__$labels__}) / node_cpu_seconds_total_counter{__$labels__}) * 100",
          "unit": "percent",
          "data_type": "float",
          "description": "Current CPU idle percentage, representing the proportion of time the CPU is not performing any work.",
          "dimensions": [
            {
            "name": "cpu",
            "description": "CPU"
          }
        ]
      },
      {
          "metric_group": "CPU",
          "name": "cpu_summary.iowait",
          "display_name": "Percentage of Time Waiting for IO",
          "type": "gauge",
          "query": "(node_cpu_seconds_total_counter{mode=\"iowait\",__$labels__} / node_cpu_seconds_total_counter{__$labels__}) * 100",
          "unit": "percent",
          "data_type": "float",
          "description": "Percentage of time the CPU is idle waiting for I/O operations to complete. Calculated as the time spent waiting for I/O divided by total time.",
          "dimensions": [
            {
            "name": "cpu",
            "description": "CPU"
          }
        ]
      },
      {
          "metric_group": "CPU",
          "name": "cpu_summary.system",
          "display_name": "System Usage Rate",
          "type": "gauge",
          "query": "(node_cpu_seconds_total_counter{mode=\"system\",__$labels__} / node_cpu_seconds_total_counter{__$labels__}) * 100",
          "unit": "percent",
          "data_type": "float",
          "description": "Percentage of CPU time spent in kernel mode (system tasks), reflecting the time the CPU spends processing system tasks.",
          "dimensions": [
            {
            "name": "cpu",
            "description": "CPU"
          }
        ]
      },
      {
          "metric_group": "CPU",
          "name": "cpu_summary.user",
          "display_name": "User Usage Rate",
          "type": "gauge",
          "query": "(node_cpu_seconds_total_counter{mode=\"user\",__$labels__} / node_cpu_seconds_total_counter{__$labels__}) * 100",
          "unit": "percent",
          "data_type": "float",
          "description": "Percentage of CPU time spent in user mode, reflecting the time the CPU spends running user programs.",
          "dimensions": [
            {
            "name": "cpu",
            "description": "CPU"
          }
        ]
      },
      {
          "metric_group": "CPU Load",
          "name": "load1",
          "display_name": "1 Minute Average Load",
          "type": "gauge",
          "query": "node_load1_gauge{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Average system load over the last 1 minute, represented as the number of processes running and queued.",
          "dimensions": []
      },
      {
          "metric_group": "CPU Load",
          "name": "load5",
          "display_name": "5 Minute Average Load",
          "type": "gauge",
          "query": "node_load5_gauge{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Average system load over the last 5 minutes, reflecting trends in overall system performance and load.",
          "dimensions": []
      },
      {
          "metric_group": "CPU Load",
          "name": "load15",
          "display_name": "15 Minute Average Load",
          "type": "gauge",
          "query": "node_load15_gauge{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Average system load over the last 15 minutes, providing an overview of the long-term load state of the system.",
          "dimensions": []
      },
      {
          "metric_group": "Disk",
          "name": "io.util",
          "display_name": "Disk IO Usage Rate",
          "type": "gauge",
          "query": "((rate(node_disk_io_time_seconds_total_counter{__$labels__}[5m]) / (rate(node_disk_io_time_seconds_total_counter{__$labels__}[5m]) + rate(node_disk_io_now_gauge{__$labels__}[5m]))) * 100)",
          "unit": "percent",
          "data_type": "float",
          "description": "Ratio of the time the disk is active relative to the total time, indicating the extent of disk utilization during I/O operations.",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "Disk",
          "name": "io.w_s",
          "display_name": "Disk Write Rate",
          "type": "gauge",
          "query": "rate(node_disk_writes_completed_total_counter{__$labels__}[1m])",
          "unit": "short",
          "data_type": "float",
          "description": "Number of write operations per second on the disk, reflecting the frequency and performance of write operations.",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "Disk",
          "name": "io.rkb_s",
          "display_name": "Disk Read Rate",
          "type": "gauge",
          "query": "rate(node_disk_reads_completed_total_counter{__$labels__}[1m])",
          "unit": "short",
          "data_type": "float",
          "description": "Number of read operations per second on the disk, reflecting the frequency and performance of read operations.",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "Disk",
          "name": "disk.is_use",
          "display_name": "Disk Usage Rate",
          "type": "gauge",
          "query": "((node_disk_read_bytes_total_counter{__$labels__} + node_disk_written_bytes_total_counter{__$labels__}) / (node_disk_written_bytes_total_counter{__$labels__} + node_disk_read_bytes_total_counter{__$labels__} + node_disk_io_time_weighted_seconds_total_counter{__$labels__})) * 100",
          "unit": "percent",
          "data_type": "float",
          "description": "Percentage of disk space used relative to total space, indicating the extent of storage utilization.",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "Disk",
          "name": "disk.used",
          "display_name": "Disk Used Size",
          "type": "gauge",
          "query": "(node_disk_read_bytes_total_counter{__$labels__} + node_disk_written_bytes_total_counter{__$labels__}) / 1024 / 1024 / 1024",
          "unit": "gbytes",
          "data_type": "float",
          "description": "Size of the disk space that is currently used, measured in bytes.",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "ENV",
          "name": "env.procs",
          "display_name": "Total Number of Processes",
          "type": "gauge",
          "query": "node_procs_running_gauge{__$labels__} + node_procs_blocked_gauge{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Number of all processes currently running in the system, reflecting the concurrent processing capacity of the system.",
          "dimensions": []
      },
      {
          "metric_group": "ENV",
          "name": "env.proc_running_current",
          "display_name": "Number of Running Processes",
          "type": "gauge",
          "query": "node_procs_running_gauge{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Number of currently active running processes, indicating the current load situation of the system.",
          "dimensions": []
      },
      {
          "metric_group": "ENV",
          "name": "env.procs_blocked_current",
          "display_name": "Number of IO Blocked Processes",
          "type": "gauge",
          "query": "node_procs_blocked_gauge{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Number of processes currently blocked waiting for I/O operations, indicating I/O performance bottlenecks in the system.",
          "dimensions": []
      },
      {
          "metric_group": "Memory",
          "name": "mem.total",
          "display_name": "Total Physical Memory Size",
          "type": "gauge",
          "query": "node_memory_MemTotal_bytes_gauge{__$labels__} / 1024 / 1024 / 1024",
          "unit": "tbytes",
          "data_type": "float",
          "description": "Total physical memory installed on the current machine.",
          "dimensions": []
      },
      {
          "metric_group": "Memory",
          "name": "mem.free",
          "display_name": "Free Physical Memory Amount",
          "type": "gauge",
          "query": "node_memory_MemFree_bytes_gauge{__$labels__} / 1024 / 1024 / 1024",
          "unit": "tbytes",
          "data_type": "float",
          "description": "Amount of free physical memory available on the current machine.",
          "dimensions": []
      },
      {
          "metric_group": "Memory",
          "name": "mem.cached",
          "display_name": "Cache Memory Size",
          "type": "gauge",
          "query": "node_memory_Cached_bytes_gauge{__$labels__} / 1024 / 1024 / 1024",
          "unit": "tbytes",
          "data_type": "float",
          "description": "Amount of physical memory used for cache on the current machine.",
          "dimensions": []
      },
      {
          "metric_group": "Memory",
          "name": "mem.buffer",
          "display_name": "Buffer Memory Size",
          "type": "gauge",
          "query": "node_memory_Buffers_bytes_gauge{__$labels__} / 1024 / 1024 / 1024",
          "unit": "tbytes",
          "data_type": "float",
          "description": "Amount of physical memory used for buffers on the current machine.",
          "dimensions": []
      },
      {
          "metric_group": "Memory",
          "name": "mem.usable",
          "display_name": "Available Memory for Applications",
          "type": "gauge",
          "query": "node_memory_MemAvailable_bytes_gauge{__$labels__} / 1024 / 1024 / 1024",
          "unit": "tbytes",
          "data_type": "float",
          "description": "Amount of physical memory available for applications to use on the current machine.",
          "dimensions": []
      },
      {
          "metric_group": "Memory",
          "name": "mem.pct_usable",
          "display_name": "Available Memory Percentage for Applications",
          "type": "gauge",
          "query": "((node_memory_MemAvailable_bytes_gauge{__$labels__} / node_memory_MemTotal_bytes_gauge{__$labels__}) * 100)",
          "unit": "percent",
          "data_type": "float",
          "description": "Percentage of total physical memory available for applications to use on the current machine.",
          "dimensions": []
      },
      {
          "metric_group": "Memory",
          "name": "mem.used",
          "display_name": "Memory Used by Applications",
          "type": "gauge",
          "query": "((node_memory_MemTotal_bytes_gauge{__$labels__} - node_memory_MemAvailable_bytes_gauge{__$labels__}) / 1024 / 1024 / 1024)",
          "unit": "tbytes",
          "data_type": "float",
          "description": "Amount of physical memory used by applications on the current machine.",
          "dimensions": []
      },
      {
          "metric_group": "Memory",
          "name": "mem.pct_used",
          "display_name": "Application Memory Usage Percentage",
          "type": "gauge",
          "query": "(((node_memory_MemTotal_bytes_gauge{__$labels__} - node_memory_MemAvailable_bytes_gauge{__$labels__}) / node_memory_MemTotal_bytes_gauge) * 100)",
          "unit": "percent",
          "data_type": "float",
          "description": "Percentage of physical memory in use by applications on the current machine.",
          "dimensions": []
      },
      {
          "metric_group": "Memory",
          "name": "mem.psc_used",
          "display_name": "Used Physical Memory Amount",
          "type": "gauge",
          "query": "((node_memory_MemTotal_bytes_gauge{__$labels__} - node_memory_MemFree_bytes_gauge{__$labels__}) / 1024 / 1024 / 1024)",
          "unit": "tbytes",
          "data_type": "float",
          "description": "Amount of physical memory that is currently in use.",
          "dimensions": []
      },
      {
          "metric_group": "Memory",
          "name": "mem.shared",
          "display_name": "Shared Memory Usage",
          "type": "gauge",
          "query": "node_memory_Shmem_bytes_gauge{__$labels__} / 1024 / 1024 / 1024",
          "unit": "tbytes",
          "data_type": "float",
          "description": "Amount of shared memory in use on the current machine.",
          "dimensions": []
      },
      {
          "metric_group": "Swap",
          "name": "swap.free",
          "display_name": "SWAP Free Amount",
          "type": "gauge",
          "query": "node_memory_SwapFree_bytes_gauge{__$labels__} / 1024 / 1024 / 1024",
          "unit": "gbytes",
          "data_type": "float",
          "description": "Amount of free swap space currently available, measured in bytes.",
          "dimensions": []
      },
      {
          "metric_group": "Swap",
          "name": "swap.total",
          "display_name": "SWAP Total Amount",
          "type": "gauge",
          "query": "node_memory_SwapTotal_bytes_gauge{__$labels__} / 1024 / 1024 / 1024",
          "unit": "gbytes",
          "data_type": "float",
          "description": "Total size of swap space currently available, measured in bytes.",
          "dimensions": []
      },
      {
          "metric_group": "Swap",
          "name": "swap.used",
          "display_name": "SWAP Used Amount",
          "type": "gauge",
          "query": "((node_memory_SwapTotal_bytes_gauge{__$labels__} - node_memory_SwapFree_bytes_gauge{__$labels__}) / 1024 / 1024 / 1024)",
          "unit": "gbytes",
          "data_type": "float",
          "description": "Amount of swap space that is currently in use, measured in bytes.",
          "dimensions": []
      },
      {
          "metric_group": "Swap",
          "name": "swap.pct_used",
          "display_name": "SWAP Used Percentage",
          "type": "gauge",
          "query": "((node_memory_SwapTotal_bytes_gauge{__$labels__} - node_memory_SwapFree_bytes_gauge{__$labels__}) / node_memory_SwapTotal_bytes_gauge{__$labels__} * 100)",
          "unit": "percent",
          "data_type": "float",
          "description": "Percentage of swap space that is currently in use relative to total swap space.",
          "dimensions": []
      },
      {
          "metric_group": "Net",
          "name": "net.speed_packets_recv",
          "display_name": "Incoming Packets on NIC",
          "type": "gauge",
          "query": "node_network_receive_packets_total_counter{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Number of packets received per second by the network interface card (NIC).",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "Net",
          "name": "net.speed_packets_sent",
          "display_name": "Outgoing Packets on NIC",
          "type": "gauge",
          "query": "node_network_transmit_packets_total_counter{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Number of packets sent per second by the network interface card (NIC).",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "Net",
          "name": "net.speed_recv",
          "display_name": "Incoming Bytes on NIC",
          "type": "gauge",
          "query": "rate(node_network_receive_bytes_total_counter{__$labels__}[5m]) / 1024 / 1024",
          "unit": "MBs",
          "data_type": "float",
          "description": "Number of bytes received per second by the network interface card (NIC).",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "Net",
          "name": "net.speed_sent",
          "display_name": "Outgoing Bytes on NIC",
          "type": "gauge",
          "query": "rate(node_network_transmit_bytes_total_counter{__$labels__}[5m]) / 1024 / 1024",
          "unit": "MBs",
          "data_type": "float",
          "description": "Number of bytes sent per second by the network interface card (NIC).",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "Net",
          "name": "net.errors",
          "display_name": "NIC Error Packets",
          "type": "gauge",
          "query": "node_network_receive_errs_total_counter{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Total number of send or receive errors detected by the network card driver.",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "Net",
          "name": "net.dropped",
          "display_name": "NIC Dropped Packets",
          "type": "gauge",
          "query": "node_network_receive_drop_total_counter{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Total number of packets dropped by the network card driver.",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "Net",
          "name": "net.collisions",
          "display_name": "NIC Collision Packets",
          "type": "gauge",
          "query": "node_network_transmit_colls_total_counter{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Total number of collisions detected on the network card.",
          "dimensions": [
            {
            "name": "device",
            "description": "Device"
          }
        ]
      },
      {
          "metric_group": "UDP",
          "name": "netstat.cur_udp_indatagrams",
          "display_name": "UDP Incoming Packets Amount",
          "type": "gauge",
          "query": "node_sockstat_UDP_inuse_gauge{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Number of UDP datagrams received by the network interface.",
          "dimensions": []
      },
      {
          "metric_group": "UDP",
          "name": "netstat.cur_udp_outdatagrams",
          "display_name": "UDP Outgoing Packets Amount",
          "type": "gauge",
          "query": "node_sockstat_UDP_mem_gauge{__$labels__}",
          "unit": "short",
          "data_type": "float",
          "description": "Number of UDP datagrams sent by the network interface.",
          "dimensions": []
      }
  ]
}